<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".car">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/road"
                android:layout_width="813dp"
                android:layout_height="442dp"
                android:layout_weight="0"
                android:visibility="visible"
                app:srcCompat="@drawable/road" />

            <ImageView
                android:id="@+id/p2car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="45dp"
                app:srcCompat="@drawable/blue" />

            <ImageView
                android:id="@+id/p1car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="290dp"
                app:srcCompat="@drawable/purple" />

            <ImageView
                android:id="@+id/fin"
                android:layout_width="1541dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:srcCompat="@drawable/chess" />

            <Button
                android:id="@+id/start"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="#0A852D"
                android:onClick="Start"
                android:text="СТАРТ"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/p1"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="570dp"
                android:layout_marginTop="350dp"
                android:backgroundTint="#A031FD"
                android:onClick="Drive1"
                android:text="ЕХАТЬ"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

            <Button
                android:id="@+id/p2"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="570dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="#0033FE"
                android:onClick="Drive2"
                android:text="ЕХАТЬ"
                android:textSize="16sp"
                app:cornerRadius="5dp" />

            <FrameLayout
                android:layout_width="330dp"
                android:layout_height="52dp"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="195dp"
                android:background="#FAD61E">

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#FFFFFF"
                    android:text="Инфо"
                    android:textColor="#00FFFFFF"
                    android:textSize="34sp" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>